# ==============================================
# InfraSight Environment Configuration
# ==============================================
# Copy this file to .env and update the values

# ==============================================
# Database Configuration
# ==============================================
POSTGRES_USER=infrasight
POSTGRES_PASSWORD=infrasight_password
POSTGRES_DB=infrasight
POSTGRES_PORT=5432

# Database URL for backend (automatically constructed in docker-compose)
# For local development outside Docker: postgresql://infrasight:infrasight_password@localhost:5432/infrasight
DATABASE_URL=postgresql+asyncpg://infrasight:infrasight_password@db:5432/infrasight


# ==============================================
# Backend Security & Authentication
# ==============================================
# Generate a secure secret key for production
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# CORS Configuration
# ==============================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# ==============================================
# Application Settings
# ==============================================
DEBUG=true
ENVIRONMENT=development

# ==============================================
# Port Configuration
# ==============================================
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ==============================================
# Cloud Deployment Settings (for production)
# ==============================================
# Uncomment and configure these for cloud deployment

# For Render/Railway deployment
# DATABASE_URL=postgresql://username:password@hostname:port/database

# For production CORS
# ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-custom-domain.com

# For production security
# SECRET_KEY=your-production-secret-key
# DEBUG=false
# ENVIRONMENT=production
